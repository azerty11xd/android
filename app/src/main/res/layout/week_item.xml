<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="20px"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView

        android:textSize="18dp"
        android:id="@+id/date"
        android:layout_marginBottom="10px"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="11/10/2021">


    </TextView>

    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="260px"

        android:layout_centerHorizontal="true"
        app:cardCornerRadius="20px">


<LinearLayout
    android:layout_width="1000px"
    android:layout_height="match_parent"


    android:layout_gravity="center"
    android:orientation="horizontal">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="250px"
    android:layout_height="wrap_content">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/burn" />


    <TextView
        android:id="@+id/mytxtv"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40px"
        android:layout_gravity="center"
        android:text="Calories" />



</LinearLayout>




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="250px"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/runcof" />


        <TextView
            android:id="@+id/mytxtvsteps"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:layout_gravity="center"
            android:text="Calories" />



    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="250px"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/water" />


        <TextView
            android:id="@+id/mytxtvwater"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:layout_marginLeft="20px"
            android:layout_gravity="center_horizontal"
            android:text="Calories" />



    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="250px"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/time" />


        <TextView
            android:id="@+id/mytxtvtime"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:layout_gravity="center"
            android:text="Calories" />



    </LinearLayout>


</LinearLayout>






    </androidx.cardview.widget.CardView>

</LinearLayout>