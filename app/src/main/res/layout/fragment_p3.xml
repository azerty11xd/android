<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#edf0f6"
    tools:context=".parentsFragment.P3Fragment">

    <!-- TODO: Update blank fragment layout -->


    <View

       android:layout_marginTop="55px"
        android:layout_marginLeft="174px"

        android:id="@+id/circle"
        android:layout_width="78dp"
        android:layout_height="78dp"

        android:background="@drawable/circle"/>
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/black"
        android:layout_marginTop="-700px"
        android:layout_marginLeft="-100dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:outlineAmbientShadowColor="@color/black"
        app:cardCornerRadius="250dp"

        android:layout_gravity="center">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/user"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <View

        android:id="@+id/myRectangleView"
        android:layout_width="900px"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250px"

        android:background="@drawable/rectangle" />



<LinearLayout
    android:layout_marginTop="150px"
    android:layout_width="900px"
  android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"


    android:background="#fafbff">
    <TextView
        android:layout_marginLeft="50px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User name"/>
    <TextView
        android:layout_marginLeft="50px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 achievements"
        />

<LinearLayout

    android:layout_marginTop="40px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="250px"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="12"
        android:textSize="17dp"/>
    <TextView
        android:layout_width="250px"
       android:gravity="center"
        android:layout_height="wrap_content"
        android:text="15"
        android:textSize="17dp"
        />
    <TextView
        android:layout_width="250px"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="1:20:30"
        android:textSize="17dp"
        />
</LinearLayout>



    <LinearLayout


        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="250px"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Total runs"
           />
        <TextView
            android:layout_width="250px"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Longest run"
            />
        <TextView
            android:layout_width="250px"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="total time"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dp"
            android:id="@+id/indeterminateBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="245dp"
            android:layout_height="5dp"
            android:progress="25"
            android:progressBackgroundTint="@color/white"
            android:progressTint="#F95A76"
            />
        <LinearLayout
            android:layout_marginTop="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="250px"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Beginner"
                />
            <TextView
                android:layout_width="250px"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="25%"
                />
            <TextView
                android:layout_width="250px"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="120 KM"
                />


        </LinearLayout>
    </LinearLayout>




</LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="255dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:text="Achievements"
                android:textSize="20dp">


            </TextView>


        </LinearLayout>


        <ScrollView
            android:layout_marginTop="50px"
            android:layout_width="1000px"
            android:layout_height="750px">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="1000px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"

                    android:gravity="center_horizontal">


                    <androidx.cardview.widget.CardView

                        android:layout_width="280px"
                        android:layout_height="280px"
                        app:cardCornerRadius="20px"


                        app:cardElevation="0dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="280px"
                        android:layout_height="280px"
                        android:layout_marginLeft="20px"
                        app:cardCornerRadius="20px"


                        app:cardElevation="0dp" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="280px"
                        android:layout_height="280px"
                        android:layout_marginLeft="20px"
                        app:cardCornerRadius="20px"


                        app:cardElevation="0dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="1000px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60px"

                    android:gravity="center_horizontal">


                    <androidx.cardview.widget.CardView

                        android:layout_width="280px"
                        android:layout_height="280px"
                        app:cardCornerRadius="20px"


                        app:cardElevation="0dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="280px"
                        android:layout_height="280px"
                        android:layout_marginLeft="20px"
                        app:cardCornerRadius="20px"


                        app:cardElevation="0dp" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="280px"
                        android:layout_height="280px"
                        android:layout_marginLeft="20px"
                        app:cardCornerRadius="20px"


                        app:cardElevation="0dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="1000px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60px"

                    android:gravity="center_horizontal">


                    <androidx.cardview.widget.CardView

                        android:layout_width="280px"
                        android:layout_height="280px"
                        app:cardCornerRadius="20px"


                        app:cardElevation="0dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="280px"
                        android:layout_height="280px"
                        android:layout_marginLeft="20px"
                        app:cardCornerRadius="20px"


                        app:cardElevation="0dp" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="280px"
                        android:layout_height="280px"
                        android:layout_marginLeft="20px"
                        app:cardCornerRadius="20px"


                        app:cardElevation="0dp" />


                </LinearLayout>


            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</FrameLayout>